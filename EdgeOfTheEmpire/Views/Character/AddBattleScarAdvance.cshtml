@model EdgeOfTheEmpire.Entities.CharacterBattleScarAdvance

<form asp-action="AddBattleScarAdvance" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label asp-for="Talent" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Talent" class="form-control" />
            <span asp-validation-for="Talent" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Add battle scar" />
        </div>
    </div>
</form>