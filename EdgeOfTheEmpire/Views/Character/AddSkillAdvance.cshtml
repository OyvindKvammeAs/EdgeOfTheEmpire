@model EdgeOfTheEmpire.Entities.CharacterSkillAdvance

<form asp-action="AddSkillAdvance" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label asp-for="Skill" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Skill" class="form-control" />
            <span asp-validation-for="Skill" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Rank" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Rank" class="form-control" />
            <span asp-validation-for="Rank" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Improve skill" />
        </div>
    </div>
</form>