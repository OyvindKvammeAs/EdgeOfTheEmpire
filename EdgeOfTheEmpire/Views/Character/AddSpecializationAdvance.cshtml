@model EdgeOfTheEmpire.Entities.CharacterSpecializationAdvance

<form asp-action="AddSpecializationAdvance" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label asp-for="Specialization" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Specialization" class="form-control" />
            <span asp-validation-for="Specialization" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Row" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Row" class="form-control" />
            <span asp-validation-for="Row" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Column" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Column" class="form-control" />
            <span asp-validation-for="Column" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Improve specialization" />
        </div>
    </div>
</form>